<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://questionDetailView.title"
      focusComponent="form">
    <data>
        <instance id="questionDc"
                  class="com.company.diamondchildren.entity.Question">
            <fetchPlan extends="_base">
                <property name="answer" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="answerDc" property="answer"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="questionDc">
            <textField id="new_questionField" property="new_question"/>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="answerDataGrid.create"/>
            <button action="answerDataGrid.edit"/>
            <button action="answerDataGrid.remove"/>
        </hbox>
        <dataGrid id="answerDataGrid" dataContainer="answerDc" width="100%" minHeight="20em">
            <actions>
                <action id="create" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="edit" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="answer"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
