<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://pollDetailView.title"
      focusComponent="form">
    <data>
        <instance id="pollDc"
                  class="com.company.diamondchildren.entity.Poll">
            <fetchPlan extends="_base">
                <property name="questions" fetchPlan="_base">
                    <property name="answer" fetchPlan="_base"/>
                    <property name="poll" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="questionsDc" property="questions"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="pollDc">
            <textField id="name_pollField" property="name_poll"/>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="questionsDataGrid.create"/>
            <button action="questionsDataGrid.edit"/>
            <button action="questionsDataGrid.remove"/>
        </hbox>
        <dataGrid id="questionsDataGrid" dataContainer="questionsDc" width="100%" minHeight="20em">
            <actions>
                <action id="create" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="edit" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="new_question"/>
                <column property="poll"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
